<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="gr.algo.jim.pointscollector.MainActivity">

    <TextView
            android:text="TextView"
            android:layout_width="329dp"
            android:layout_height="65dp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:textSize="24sp"
            android:textStyle="bold" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.521" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"/>
    <Button
            android:text="Αποστολή"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:id="@+id/button2"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Ακύρωση"
            android:layout_width="111dp"
            android:layout_height="65dp"
            android:id="@+id/button3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.99"/>
    <ListView
            android:layout_width="309dp"
            android:layout_height="283dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/lvProducts" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.294"/>

</android.support.constraint.ConstraintLayout>
